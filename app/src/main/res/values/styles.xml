<!-- res/values/styles.xml -->
<resources>

    <!-- Application theme: Light -->
    <style name="Theme.MyApp.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/secondary_teal</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>

        <!-- Error -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- 默认字体、形状等 -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

    <!-- Application theme: Dark -->
    <style name="Theme.MyApp.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/secondary_teal</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">#E0E0E0</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E0E0E0</item>

        <!-- Error -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- 默认字体、形状等 -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

</resources>
